<Application x:Class="NotePad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NotePad"
             StartupUri="MainWindow.xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <FontFamily x:Key="TextBoxFontFamily">Arial</FontFamily>
        <System:Double x:Key="TextBoxFontSize">14</System:Double>
        <System:Double x:Key="TextBoxFontSizeFixed">14</System:Double>
        <FontStyle x:Key="TextBoxFontStyle">Normal</FontStyle>
        <FontWeight x:Key="TextBoxFontWeight">Normal</FontWeight>
    </Application.Resources>
</Application>
